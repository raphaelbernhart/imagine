{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strictNullChecks": false,
        "strict": true,
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./src/types"
    ],
    "ts-node": {
        "files": true
    }
}