{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "ignorePatterns": ["dist/*.js"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [2, 4],
        "eol-last": 0,
        "no-extra-semi": "warn",
        "no-console": "warn",
        "no-unused-vars": 1,
        "no-underscore-dangle": 0,
        "import/extensions": [
            1,
            {
                "ts": "never"
            }
        ],
        "import/no-unresolved": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx", "d.ts"]
            }
        }
    }
}
